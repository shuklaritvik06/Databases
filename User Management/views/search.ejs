<%-include("partials/header")%>
<body>
    <div class="container">
    <%-include("partials/navbar")%>
    <div id="formContainer" class="my-3">
    <form action="/search" method="post">
        <input type="number" class="form-control mb-3" name="id" placeholder="Enter id">
        <button class="btn btn-primary">Search</button>
    </form>
    <%if(data.name!==undefined){%>
    <div class="card w-50 my-3">
        <div class="card-body d-flex justify-content-between">
            <div>
                <h3><%=data.name%></h3>
                <p><%=data.email%></p>
                <p><%=data.number%></p>
            </div>
            <div class="d-flex">
        <form action="/del/<%=data.id%>?_method=DELETE" method="post">    
            <button class="btn btn-danger me-3">Delete</button>
        </form>
        </div>
        </div>
    </div>
    <%}%>        
    </div>   
</div>
</body>
</html>